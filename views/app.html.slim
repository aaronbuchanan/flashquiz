doctype html
html ng-app="quizApp"
  head
    title FlashQuiz MVP
    script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"
    script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular-route.min.js"

    link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css"
    script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"
    script src="//maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"

  body ng-controller="AppCtrl"

    h1 Hello FlashQuiz

    javascript:
      var app = angular.module('quizApp', ['ngRoute']);

      app.config(['$routeProvider', function ($router) {
      }]);

      app.controller("AppCtrl", function ($scope, cardsFactory) {
          cardsFactory.getCards().success(function (data) {
            app.cards = data;
            console.log('loaded cards:', app.cards);
          });
      });

      app.controller("Ctrl", function ($scope, cardsFactory) {
          cardsFactory.getCards().success(function (data) {
            app.cards = data;
            console.log('loaded cards:', app.cards);
          });
      });

      app.factory("cardsFactory", function ($http) {
        var factory = {};
        factory.getCards = function () {
          return $http.get('/cards.json');
        };
        return factory;
      });

